@{
    ViewBag.Title = "Список ссылок";
}

<div class="container">
    <header> 
        <h1 data-animated="GoIn">Список ваших коротких ссылок</h1>
    </header>
    <div class="row" ng-app="app" ng-controller="LinksListController" style="background-color:white; border-radius:10px; color:black">
        <div class="col-md-12 mt centered" >
            <table class="table ">
                <thead>
                    <tr>
                        <th>Оригинальная ссылка</th>
                        <th>Кроткая ссылка</th>
                        <th>Дата создания</th>
                        <th>Количество переходов</th>
                    </tr>
                </thead>
                <tbody ng-repeat="model in links">
                    <tr>
                        <td class="text-left"><a href="{{model.OriginalLink}}" target="_blank">{{model.OriginalLink}}</a></td>
                        <td class="text-left"><a href="/api/{{model.ShortLink}}" target="_blank">http://@HttpContext.Current.Request.Url.Authority/api/{{model.ShortLink}}</a></td>
                        <td>{{model.DateCreated | date:'M/d/yyyy HH:mm:ss'}}</td>
                        <td>{{model.CountTransition}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <br />
    @Html.ActionLink("Вернуться на главную страницу", "Index", "Home", new { @class = "btn btn-success" })
</div>

